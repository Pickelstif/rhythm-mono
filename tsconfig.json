{
  "files": [],
  "references": [
    { "path": "./apps/main-app" },
    { "path": "./apps/organizers-app" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/main-app/src/*"],
      "@organizers/*": ["./apps/organizers-app/src/*"],
      "@shared/types": ["./packages/shared-types/src/index"],
      "@shared/database": ["./packages/database/src/index"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
